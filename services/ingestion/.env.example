# Environment
ENVIRONMENT=development
DEBUG=True

# API Configuration
API__HOST=0.0.0.0
API__PORT=8000
API__SECRET_KEY=change-me-in-production-use-strong-random-key
API__CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database Configuration
DB__HOST=localhost
DB__PORT=5432
DB__NAME=trackshift
DB__USER=postgres
DB__PASSWORD=postgres
DB__POOL_SIZE=10
DB__MAX_OVERFLOW=20

# Storage Configuration (MinIO/S3)
STORAGE__ENDPOINT=localhost:9000
STORAGE__ACCESS_KEY=minioadmin
STORAGE__SECRET_KEY=minioadmin
STORAGE__BUCKET_NAME=trackshift-frames
STORAGE__REGION=us-east-1
STORAGE__SECURE=False

# Redis Configuration
REDIS__HOST=localhost
REDIS__PORT=6379
REDIS__DB=0
REDIS__PASSWORD=
REDIS__MAX_CONNECTIONS=50

# RTSP Configuration
RTSP__MAX_CONCURRENT_STREAMS=10
RTSP__FRAME_BUFFER_SIZE=100
RTSP__CAPTURE_TIMEOUT=30
RTSP__RECONNECT_ATTEMPTS=3
RTSP__RECONNECT_DELAY=5
RTSP__DEFAULT_FPS=1.0

# Upload Configuration
UPLOAD__MAX_FILE_SIZE=52428800
UPLOAD__MAX_BATCH_SIZE=10
UPLOAD__ALLOWED_EXTENSIONS=["jpg","jpeg","png","bmp","tiff"]
UPLOAD__TEMP_UPLOAD_DIR=/tmp/trackshift/uploads

# Logging Configuration
LOG__LEVEL=INFO
LOG__FORMAT=json
LOG__OUTPUT_DIR=logs
